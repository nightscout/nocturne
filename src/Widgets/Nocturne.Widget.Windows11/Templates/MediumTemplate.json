{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${glucose}",
                            "size": "ExtraLarge",
                            "weight": "Bolder",
                            "color": "${if(stale, 'Attention', 'Default')}"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${delta}",
                            "size": "Medium",
                            "isSubtle": true,
                            "spacing": "None"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${direction}",
                            "size": "ExtraLarge",
                            "horizontalAlignment": "Center"
                        }
                    ],
                    "verticalContentAlignment": "Center"
                }
            ]
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "IOB",
                            "size": "Small",
                            "isSubtle": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "${iob}U",
                            "size": "Medium",
                            "weight": "Bolder",
                            "spacing": "None"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "COB",
                            "size": "Small",
                            "isSubtle": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "${cob}g",
                            "size": "Medium",
                            "weight": "Bolder",
                            "spacing": "None"
                        }
                    ]
                }
            ],
            "spacing": "Medium"
        },
        {
            "type": "TextBlock",
            "text": "Updated ${lastUpdate}",
            "size": "Small",
            "isSubtle": true,
            "horizontalAlignment": "Right",
            "spacing": "Small"
        }
    ],
    "actions": [
        {
            "type": "Action.Execute",
            "title": "Refresh",
            "verb": "refresh"
        },
        {
            "type": "Action.Execute",
            "title": "Open",
            "verb": "openApp"
        }
    ],
    "selectAction": {
        "type": "Action.Execute",
        "verb": "openApp"
    }
}
