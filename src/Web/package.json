{
  "name": "@nocturne/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Nocturne web monorepo - SvelteKit app and WebSocket bridge",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter @nocturne/app dev",
    "build": "pnpm --recursive build",
    "lint": "pnpm --recursive lint",
    "format": "pnpm --recursive format",
    "check": "pnpm --recursive check",
    "test": "pnpm --recursive test",
    "clean": "pnpm --recursive clean && rm -rf node_modules",
    "transform-api-client": "node --experimental-transform-types utils/transformApiClient/index.ts",
    "generate-api-client": "cd ../API/Nocturne.API && nswag run nswag.json",
    "generate-zod-schemas": "node --experimental-transform-types utils/generateZodSchemas/index.ts",
    "generate-api": "pnpm run generate-api-client && pnpm run generate-zod-schemas",
    "translations:stage": "git add -f locales/*.po"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "zod": "^4.3.6",
    "prettier": "^3.7.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite-plugin-lingo": "^0.1.0"
  },
  "engines": {
    "node": ">=24",
    "pnpm": ">=9"
  },
  "pnpm": {
    "overrides": {
      "@sveltejs/vite-plugin-svelte": "^5.0.3",
      "svelte": "^5.37.0",
      "vite": "^6.3.5"
    }
  },
  "dependencies": {
    "@wuchale/svelte": "^0.18.1",
    "@wuchale/vite-plugin": "^0.16.3",
    "runed": "^0.37.0",
    "wuchale": "^0.19.4"
  }
}
