{
  "name": "@nocturne/app",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "exports": {
    "./src/app.css": "./src/app.css",
    "./ui/*.svelte": "./src/lib/components/ui/*.svelte",
    "./ui/*": "./src/lib/components/ui/*/index.ts",
    "./utils": "./src/lib/utils/index.ts",
    "./stores/*.svelte": "./src/lib/stores/*.svelte.ts",
    "./stores/*": "./src/lib/stores/*",
    "./components/*.svelte": "./src/lib/components/*.svelte",
    "./components/*": "./src/lib/components/*",
    "./api/*": "./src/lib/api/generated/*"
  },
  "directories": {
    "lib": "lib"
  },
  "author": "",
  "license": "ISC",
  "description": "Nocturne SvelteKit frontend application",
  "scripts": {
    "start": "node server.js",
    "dev": "vite dev",
    "generate-api-client": "dotnet build -t:GenerateClient ../../../API/Nocturne.API/Nocturne.API.csproj",
    "generate:remote": "pnpm --filter @nocturne/remote-function-codegen generate",
    "dev:install": "pnpm install && pnpm run dev",
    "dev:install:fresh": "pnpm install --force && pnpm run dev",
    "dev:demo": "vite dev --mode demo",
    "dev:prod": "vite dev --mode production",
    "dev:test": "vite dev --mode test",
    "build": "vite build",
    "build:sveltekit": "vite build",
    "dev:sveltekit": "vite dev",
    "dev:sveltekit:prod": "vite dev --mode production",
    "dev:sveltekit:test": "vite dev --mode test",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json 2>&1",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:e2e": "playwright test",
    "test": "npm run test:e2e && npm run test:unit -- --run",
    "test:unit": "vitest",
    "lint": "eslint . && prettier --check .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@internationalized/date": "^3.11.0",
    "@lucide/svelte": "^0.563.1",
    "@playwright/test": "^1.58.2",
    "@sveltejs/adapter-auto": "^7.0.0",
    "@sveltejs/adapter-node": "^5.5.2",
    "@sveltejs/kit": "^2.50.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/table-core": "^8.21.3",
    "@types/d3-shape": "^3.1.8",
    "@types/eslint": "^9.6.1",
    "autoprefixer": "^10.4.24",
    "bits-ui": "^2.15.5",
    "clsx": "^2.1.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.3.0",
    "happy-dom": "^20.5.3",
    "layerchart": "2.0.0-next.43",
    "mode-watcher": "^1.1.0",
    "paneforge": "^1.0.2",
    "prettier": "^3.8.1",
    "prettier-plugin-jsdoc": "^1.8.0",
    "prettier-plugin-svelte": "^3.4.1",
    "socket.io-client": "^4.8.3",
    "svelte": "^5.50.0",
    "svelte-check": "^4.3.6",
    "svelte-sonner": "^1.0.7",
    "sveltekit-superforms": "^2.29.1",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.7",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.54.0",
    "vaul-svelte": "1.0.0-next.7",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@layerstack/tailwind": "^1.0.1",
    "@layerstack/utils": "2.0.0-next.14",
    "@microsoft/signalr": "^10.0.0",
    "@nocturne/bridge": "workspace:*",
    "@types/d3": "^7.4.3",
    "@types/d3-scale": "^4.0.9",
    "d3": "^7.9.0",
    "d3-scale": "^4.0.2",
    "d3-shape": "^3.2.0",
    "diff": "^8.0.3",
    "lucide-svelte": "^0.563.0",
    "runed": "^0.37.1",
    "sveltekit-search-params": "^3.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite-plugin-commonjs": "^0.10.4",
    "zod": "^4.3.6"
  }
}
