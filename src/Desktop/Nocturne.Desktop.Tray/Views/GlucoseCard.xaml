<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Nocturne.Desktop.Tray.Views.GlucoseCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="16,12" ColumnSpacing="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- BG Value + Trend Arrow -->
        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Spacing="4">
            <TextBlock
                x:Name="BgValueText"
                Text="---"
                FontSize="48"
                FontWeight="Bold"
                VerticalAlignment="Center" />

            <TextBlock
                x:Name="TrendArrowText"
                Text=""
                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                FontSize="28"
                VerticalAlignment="Center"
                Margin="4,0,0,0">
                <TextBlock.RenderTransform>
                    <RotateTransform x:Name="TrendArrowRotation" Angle="0" CenterX="14" CenterY="14" />
                </TextBlock.RenderTransform>
            </TextBlock>
        </StackPanel>

        <!-- Details column: delta, time ago, range label -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock
                    x:Name="DeltaText"
                    Text=""
                    FontSize="16"
                    Opacity="0.8" />
                <TextBlock
                    x:Name="UnitText"
                    Text="mg/dL"
                    FontSize="12"
                    Opacity="0.5"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,1" />
            </StackPanel>

            <TextBlock
                x:Name="TimeAgoText"
                Text="--"
                FontSize="13"
                Opacity="0.6" />

            <TextBlock
                x:Name="RangeLabelText"
                Text=""
                FontSize="12"
                FontWeight="SemiBold"
                Opacity="0.9" />
        </StackPanel>
    </Grid>

</UserControl>
