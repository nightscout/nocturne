<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Nocturne.Desktop.Tray.Views.FlyoutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Nocturne.Desktop.Tray.Views"
    Title="Nocturne">

    <Grid
        x:Name="RootGrid"
        Background="{ThemeResource LayerFillColorDefaultBrush}"
        CornerRadius="8"
        BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
        BorderThickness="1"
        RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Grid Grid.Row="0" Padding="16,12,16,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Text="Nocturne"
                FontSize="13"
                FontWeight="SemiBold"
                Opacity="0.6"
                VerticalAlignment="Center" />

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                <Ellipse
                    x:Name="ConnectionIndicator"
                    Width="8"
                    Height="8"
                    Fill="{ThemeResource SystemFillColorCriticalBrush}" />
                <TextBlock
                    x:Name="ConnectionText"
                    Text="Disconnected"
                    FontSize="11"
                    Opacity="0.5"
                    VerticalAlignment="Center" />
            </StackPanel>
        </Grid>

        <!-- Content -->
        <StackPanel Grid.Row="1" Spacing="0">
            <local:GlucoseCard x:Name="GlucoseCardControl" />
            <local:MiniChart x:Name="MiniChartControl" />
        </StackPanel>

        <!-- Footer with device info -->
        <Grid Grid.Row="2" Padding="16,4,16,10">
            <TextBlock
                x:Name="DeviceText"
                Text=""
                FontSize="11"
                Opacity="0.35"
                HorizontalAlignment="Left" />
        </Grid>
    </Grid>

</Window>
